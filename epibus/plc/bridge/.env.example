# PLC Bridge Configuration
# Copy this file to .env and update the values

# Frappe Connection (Required)
FRAPPE_URL=http://localhost:8000
FRAPPE_API_KEY=your_api_key_here
FRAPPE_API_SECRET=your_api_secret_here

# PLC Bridge Settings (Optional)
PLC_POLL_INTERVAL=1.0
PLC_LOG_LEVEL=INFO

# SSE Server Settings (Optional)
SSE_HOST=0.0.0.0
SSE_PORT=7654

# Docker Compose Settings
COMPOSE_PROJECT_NAME=frappe_docker
RESTART_POLICY=unless-stopped